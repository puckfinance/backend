{
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ES2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./built",
    "baseUrl": "./src",
    "paths": {
      "*": ["./src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "__tests__/redis.test.ts"],
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  }
}
